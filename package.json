  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@indimeco/eslint-config-indimeco": "^1.1.9",
    "@typescript-eslint/eslint-plugin": "^3",
    "@typescript-eslint/parser": "^3",
    "eslint": "^6",
    "eslint-config-airbnb": "^18.0.1",
