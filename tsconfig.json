{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true, 
    "isolatedModules": true,
    "jsx": "react",
    "typeRoots" : ["./node_modules/@types"],
    "outDir": "build",
  },
}
